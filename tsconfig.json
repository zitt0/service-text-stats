{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts", "test"]
}
